{
  "name": "jyothi-backend",
  "version": "1.0.0",
  "description": "Authentication system with role-based access control",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "build:prod": "npm run build && npm run db:generate",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "seed:events": "ts-node src/scripts/seedEventTypes.ts",
    "seed:services": "ts-node src/scripts/seedServices.ts",
    "seed:all": "ts-node src/scripts/seedAll.ts",
    "seed:comprehensive": "ts-node src/scripts/seedAll.ts",
    "seed:products": "ts-node src/scripts/seedAll.ts",
    "test:connection": "ts-node src/scripts/testConnection.ts",
    "test:build": "npm run build && npm start",
    "deploy": "npm run build:prod && npm run db:migrate && npm run start:prod"
  },
  "dependencies": {
    "@prisma/client": "6.14.0",
    "@sendgrid/mail": "^8.1.6",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.10",
    "@types/nodemailer": "^7.0.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.6",
    "resend": "^4.8.0",
    "ts-node": "^10.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "6.14.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "authentication",
    "role-based",
    "prisma",
    "postgresql"
  ],
  "author": "",
  "license": "MIT"
}
